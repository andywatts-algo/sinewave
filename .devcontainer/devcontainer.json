{
	"name": "sinewave",
	"build": {
	  "dockerfile": "Dockerfile"
	},
	"postCreateCommand": "jupyter notebook --ip=0.0.0.0 --port=8888 --no-browser --allow-root",
	"runArgs": [
		"--privileged", 
		"--net", "host",
		"-e", "DISPLAY=host.docker.internal:0",
		"-e", "XAUTHORITY=/tmp/.Xauthority",
		"-v", "${localEnv:HOME}/.Xauthority:/tmp/.Xauthority",
		"-p", "8888:8888"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter"
			]
		}
	}
}
